# ========================================
# APPLICATION CONFIGURATION
# ========================================
APP_NAME="RESPONTA"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Gunakan MySQL atau PostgreSQL untuk production
# SQLite untuk development/testing

# SQLite (Development)
DB_CONNECTION=sqlite

# MySQL
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=responta
# DB_USERNAME=root
# DB_PASSWORD=

# PostgreSQL (Recommended for GIS features)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=responta
# DB_USERNAME=postgres
# DB_PASSWORD=

# ========================================
# SESSION & CACHE CONFIGURATION
# ========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
CACHE_STORE=database
# CACHE_PREFIX=

# ========================================
# QUEUE CONFIGURATION
# ========================================
# Development: database
# Production: redis (recommended)
QUEUE_CONNECTION=database

# ========================================
# REDIS CONFIGURATION (Optional)
# ========================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========================================
# MEMCACHED CONFIGURATION (Optional)
# ========================================
MEMCACHED_HOST=127.0.0.1

# ========================================
# MAIL CONFIGURATION
# ========================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@responta.id"
MAIL_FROM_NAME="${APP_NAME}"

# ========================================
# FILE STORAGE CONFIGURATION
# ========================================
FILESYSTEM_DISK=local

# AWS S3 Configuration (Production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ========================================
# LARAVEL SANCTUM CONFIGURATION
# ========================================
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1
FRONTEND_URL=http://localhost:5173

# ========================================
# SMS OTP PROVIDER CONFIGURATION
# ========================================
# Options: twilio, nexmo, local
SMS_PROVIDER=log

# Twilio Configuration
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

# Nexmo/Vonage Configuration
NEXMO_KEY=
NEXMO_SECRET=
NEXMO_FROM=RESPONTA

# Local SMS Gateway
SMS_GATEWAY_URL=
SMS_GATEWAY_KEY=

# ========================================
# MAP & GEOCODING CONFIGURATION
# ========================================
# Options: osm (OpenStreetMap - Free), google (Google Maps - Berbayar)
MAP_PROVIDER=osm
GEOCODING_PROVIDER=nominatim

# OpenStreetMap Nominatim (Free)
NOMINATIM_URL=https://nominatim.openstreetmap.org

# Google Maps API (Berbayar)
GOOGLE_MAPS_API_KEY=

# ========================================
# NIK VALIDATION API (Optional)
# ========================================
# Integrasi dengan Disdukcapil untuk validasi NIK
DISDUKCAPIL_ENABLED=false
DISDUKCAPIL_API_URL=
DISDUKCAPIL_API_KEY=
DISDUKCAPIL_API_SECRET=

# ========================================
# IMAGE PROCESSING CONFIGURATION
# ========================================
# Thumbnail size (width x height)
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300

# Max upload size (MB)
MAX_UPLOAD_SIZE=2

# Allowed image formats
ALLOWED_IMAGE_FORMATS=jpeg,png,jpg

# ========================================
# VITE CONFIGURATION
# ========================================
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE_URL="${APP_URL}"
