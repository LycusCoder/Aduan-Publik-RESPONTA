{
  "info": {
    "name": "RESPONTA API - Phase 2",
    "description": "Authentication API endpoints for RESPONTA - Sistem Pelaporan Aduan Warga",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "responta-auth-v1",
    "version": "2.0.0"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register (OTP Disabled)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Budi Santoso\",\n  \"no_hp\": \"081234567890\",\n  \"nik\": \"1234567890123456\",\n  \"email\": \"budi@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "register"]
            },
            "description": "Register new user. With OTP_ENABLED=false, user is auto-verified and receives token immediately."
          },
          "response": []
        },
        {
          "name": "Register (OTP Enabled)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Siti Nurhaliza\",\n  \"no_hp\": \"082345678901\",\n  \"nik\": \"2345678901234567\",\n  \"email\": \"siti@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "register"]
            },
            "description": "Register new user. With OTP_ENABLED=true, user must verify OTP before login. OTP will be sent to email."
          },
          "response": []
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"no_hp\": \"082345678901\",\n  \"otp_code\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/verify-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "verify-otp"]
            },
            "description": "Verify OTP code after registration. Returns authentication token on success."
          },
          "response": []
        },
        {
          "name": "Resend OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"no_hp\": \"082345678901\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/resend-otp",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "resend-otp"]
            },
            "description": "Resend OTP code to user's email. Generates new OTP with fresh expiry time."
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save token to environment variable",
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.token) {",
                  "        pm.environment.set(\"auth_token\", jsonData.data.token);",
                  "        console.log(\"Token saved: \" + jsonData.data.token.substring(0, 20) + \"...\");",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"no_hp\": \"081234567890\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "login"]
            },
            "description": "Login with phone number and password. Returns authentication token and user statistics."
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{auth_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "logout"]
            },
            "description": "Logout user and revoke current access token. Requires authentication."
          },
          "response": []
        }
      ],
      "description": "User authentication endpoints including register, login, OTP verification, and logout."
    },
    {
      "name": "Profile Management",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{auth_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "profile"]
            },
            "description": "Get authenticated user profile with statistics (total aduan, active aduan, completed aduan). Requires authentication."
          },
          "response": []
        },
        {
          "name": "Update Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{auth_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Budi Santoso Updated\",\n  \"email\": \"budi.updated@example.com\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "profile"]
            },
            "description": "Update user profile. Can update name, no_hp, and email. Requires authentication."
          },
          "response": []
        }
      ],
      "description": "User profile management endpoints for viewing and updating profile information."
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ]
}
